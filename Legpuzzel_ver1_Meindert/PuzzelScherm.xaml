<Window x:Class="Legpuzzel_ver1_Meindert.PuzzelScherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Legpuzzel_ver1_Meindert"
        mc:Ignorable="d"
        Title="PuzzelScherm" Height="450" Width="800">
    <Canvas Focusable="True" Name="PuzzleCanvas">
        <Rectangle Name="DraggableElement" Height="150" Width="150" Fill="Blue" Canvas.Top="10" Canvas.Left="10" MouseLeftButtonDown = "DraggableElement_MouseLeftButtonDown" MouseMove="DraggableElement_MouseMove" MouseLeftButtonUp="DraggableElement_MouseLeftButtonUp">
            <Rectangle.RenderTransform>
                <TranslateTransform/>
            </Rectangle.RenderTransform>
        </Rectangle>

    </Canvas>
</Window>
