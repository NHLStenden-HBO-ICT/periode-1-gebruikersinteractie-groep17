<Window x:Class="Legpuzzel_ver1_Meindert.PuzzelScherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Legpuzzel_ver1_Meindert"
        mc:Ignorable="d"
        Title="PuzzelScherm" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="ExitButton" HorizontalAlignment="Right" VerticalAlignment="Top" Height="100" Width="100" Click="ExitButton_Click" BorderBrush="Transparent" Style="{StaticResource NoBugOffButtonStyle}"/>
        <Button x:Name="RestartButton" HorizontalAlignment="Right" VerticalAlignment="Top" Height="100" Width="100" Click="RestartButton_Click" BorderBrush="Transparent" Style="{StaticResource NoBugRestartStyle}" Margin="0,100,0,0"/>
        <Button Name="Geluidsknop" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="100" Click="Geluidsknop_Click"  BorderBrush="Transparent" Style="{StaticResource NoBugSoundOffStyle}"/>
        <MediaElement x:Name="ButtonSound" Source="sounds\click-button-140881.mp3" LoadedBehavior="Manual" MediaEnded="ButtonSound_MediaEnded"/>
        <Canvas Focusable="True" Name="PuzzleCanvas" >
       
         
    </Canvas>
    </Grid>
</Window>
